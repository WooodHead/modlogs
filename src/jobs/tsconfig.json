{
  "compilerOptions": {
    "target": "es2017",
    "allowJs": true,
    "outDir": "../../build",
    "noImplicitAny": true,
    "module": "commonjs",
    "jsx": "react",
    "moduleResolution": "node",
    "lib": ["dom", "es2017"],
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "strict": true,
    "esModuleInterop": true
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules"]
}
