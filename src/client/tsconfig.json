{
  "compilerOptions": {
    "target": "es5",
    "allowJs": true,
    "outDir": "./build",
    "noImplicitAny": true,
    "sourceMap": true,
    "module": "commonjs",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es5",
      "es2015",
      "es2016"
    ],
    "noUnusedLocals": true
  },
  "include": [
    "./**/*",
    "../types/**/*"
  ]
}
